{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "e2e/**/*.ts",
    "support/**/*.ts",
    "pages/**/*.ts",
    "playwright.config.ts"
  ],
  "exclude": ["node_modules"]
}
